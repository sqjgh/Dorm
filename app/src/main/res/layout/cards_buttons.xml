<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal|bottom"
              android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/unlike"
        android:layout_alignRight="@+id/refresh"
        android:layout_marginRight="80dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/home_buttons_dislike"
        android:onClick="left"/>

    <ImageView
        android:id="@+id/refresh"
        android:layout_centerHorizontal="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/pull_content"/>

    <ImageView
        android:id="@+id/like"
        android:layout_alignLeft="@+id/refresh"
        android:layout_marginLeft="80dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/home_buttons_like"
        />
</RelativeLayout>