<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bac4">

    <TextView
        android:layout_marginTop="100dp"
        android:textColor="#FFF"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="头像"/>
    <com.example.dllo.dorm.tools.circleimage.CircleImageView
        android:id="@+id/setup_id_icon"
        android:layout_gravity="center"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:src="@mipmap/twopeople"
        app:civ_border_color="@drawable/menu_text_color"
        app:civ_border_width="2dp" />

    <EditText
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:id="@+id/setup_id_icon_nickname"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="设置昵称"/>
    <Button
        android:id="@+id/setup_id_icon_photo"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拍照"/>
    <Button
        android:id="@+id/setup_id_icon_phone"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从相册选择"/>
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/setup_id_icon_save"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="保存"/>
</LinearLayout>