<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/other_rl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/other_fab_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:transitionName="transition_reveal"
        app:backgroundTint="@color/colorAccent"
        app:elevation="0dp"
        app:fabSize="normal"
        app:pressedTranslationZ="8dp"
        tools:targetApi="21" />

    <!--<TextView-->
    <!--android:id="@+id/other_tv_container"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@color/colorAccent"-->
    <!--android:gravity="center"-->
    <!--android:text="广告\n(Advertisement)"-->
    <!--android:textColor="@android:color/white"-->
    <!--android:textSize="40sp"-->
    <!--android:textStyle="bold"-->
    <!--android:visibility="invisible"-->
    <!--tools:visibility="visible"/>-->

    <LinearLayout
        android:id="@+id/chat_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#182732">

            <ImageView
                android:id="@+id/iv_finish_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@mipmap/backb" />
            <TextView
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:id="@+id/group_name"
                android:layout_toRightOf="@id/iv_finish_chat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="群组聊天"
                 />
            <ImageView
                android:padding="15dp"
                android:id="@+id/information_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/more" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_chat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_chat"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="4" />

            <Button
                android:id="@+id/send_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发送" />
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:background="@mipmap/bac4"
        android:id="@+id/group_create"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如果要加入一个群组, 请在此页面停顿,同时让群成员邀请您,\n
                或者您可以点击下方按钮来创建群组"
                android:textColor="#ffff" />
            <Button
                android:layout_marginTop="30dp"
                android:background="@color/colorTabLayout"
                android:id="@+id/btn_create_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="创建群组" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>